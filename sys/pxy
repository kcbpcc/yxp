#!/bin/bash
# ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color
#sudo timedatectl set-timezone UTC && sudo timedatectl set-local-rtc 0 && timedatectl


# Display menu
echo -e " ${YELLOW}ğŸ›ğŸ›ğŸ› PXYÂ® PreciseXceleratedYield Pvt Ltdâ„¢ ğŸ›ğŸ›ğŸ›${NC}"

echo "        -Night Buy                nb"
echo "        -Get on Env               en"
echo "        -SquireOff-ALL            ka"
echo "        -Sell all Buy             kb"
echo "        -Buy all Sell             ks"
echo "        -Update pxy               up"
echo "        -Run PXY                  mm"
echo "        -Control pxy              ct"
echo "        -Clean Pxy                cl"
echo "        -Show me profit           tp"
echo "        -Show profit Table        pl"
echo "        -Or Simply exit           ex"

echo -e " ${YELLOW}ğŸ›ğŸ›ğŸ› PXYÂ® PreciseXceleratedYield Pvt Ltdâ„¢ ğŸ›ğŸ›ğŸ›${NC}"
# Get user input
read -t 10 -p "Enter your choice: " choice

# Perform actions based on user input
case $choice in
    nb)
        echo "Executing pxybuy - Night Buy"
        pxybuy
        ;;
    en)
        echo "Executing pxyenv - Get on Environment"
        pxyenv
        source ~/env/bin/activate
        ;;
    ka)
        echo "Executing pxykill - SquireOff all Positions"
        pxykill
        ;;
    kb)
        echo "Executing pxykillbuy - Sell all Buy Positions"
        pxykillbuy
        ;;
    ks)
        echo "Executing pxykillsell - Rename sys/exe/pxykillsell to sys/pxykillsell"
        pxykillsell
        ;;
    up)
        echo "Executing pxyupdate - Update pxyupdate"
        pxyupdate
        ;;
    mm)
        echo "Waiting for 5 seconds..."
        sleep 5
        echo "Running 'pxy'"
        pxyrun
        ;;
    ct)
        echo "Profit Table"
        pxycntrl
        ;;
    ct)
        echo "Clear Pxy"
        pxycln
        ;;

    tp)
        echo "Profit"
        pxytprft
        ;;

    pl)
        echo "Profit Table"
        pxytblprft
        ;;
    
    cl)
        echo "Profit Table"
        pxycln
        ;;

    *)
        # Empty input (user didn't make a choice in 5 seconds)
        echo "No input received in the last 5 seconds. Running 'pxy'"
        pxyrun
        ;;
    ex)
        echo "Exiting the script. Goodbye!"
        exit 0
        ;;
esac

